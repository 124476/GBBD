<Page x:Class="GBBD.Pages.OknoOpen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GBBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OknoOpen">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="17"></TextBlock>
            <TextBox x:Name="Login" FontSize="17"></TextBox>
            <TextBlock Text="Password" FontSize="17"></TextBlock>
            <TextBox x:Name="Password" FontSize="17"></TextBox>
            <Button x:Name="OpenBtn" Click="OpenBtn_Click" FontSize="17" Content="Open" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Page>
