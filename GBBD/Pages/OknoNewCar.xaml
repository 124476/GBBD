<Page x:Class="GBBD.Pages.OknoNewCar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GBBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OknoNewCar">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Number" FontSize="17"></TextBlock>
            <TextBox Text="{Binding Number}" MaxLength="6" FontSize="17"></TextBox>
            <Button Name="Save" FontSize="17" Click="Save_Click" Content="Добавить"></Button>
        </StackPanel>
    </Grid>
</Page>
