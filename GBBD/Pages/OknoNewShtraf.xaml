<Page x:Class="GBBD.Pages.OknoNewShtraf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GBBD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OknoNewShtraf">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Region" FontSize="17"></TextBlock>
            <TextBox Text="{Binding Region}" FontSize="17"></TextBox>
            <TextBlock Text="LicenceNum" FontSize="17"></TextBlock>
            <TextBox Text="{Binding LicenceNum}" FontSize="17"></TextBox>
            <TextBlock Text="Photo" FontSize="17"></TextBlock>
            <Image Source="{Binding Photo}" Height="200" Width="200"></Image>
            <Button Name="GotPhoto" FontSize="17" Content="Загрузить фото" Click="GotPhoto_Click"></Button>
            <Button Name="Save" FontSize="17" Content="Добавить" Click="Save_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
